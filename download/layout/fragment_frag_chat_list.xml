<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBFBFB" >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FBFBFB"

            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/userpropose_btn_back"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:layout_marginLeft="5dp"
                android:src="@drawable/img_ic_backbtn"
                app:tint="#00000000" /> <!-- 여백 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/> <!-- 여백 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                android:text="채팅 목록"
                android:textColor="#37c467"
                android:textSize="20sp"
                android:textStyle="bold" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/> <!-- 여백 -->

            <ImageButton
                android:id="@+id/userpropose_btn_wrt"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:layout_marginRight="5dp"
                android:src="@drawable/img_ic_alarmbtn"
                app:tint="#37c467" /> <!-- 알림 버튼 -->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E3E3" /> <!-- 구분선 -->

    </LinearLayout> <!-- 상단바 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white" >

                <LinearLayout
                    android:id="@+id/chatlist_chat_table"

                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/chatlist_img_user"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/img_photo"
                        android:background="@drawable/shape_profilebtn_circle"/> <!-- 유저 프로필 사진 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/chatlist_text_username"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:text="유저 이름" /> <!-- 유저 이름-->

                            <TextView
                                android:id="@+id/chatlist_text_send_time"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="13sp"
                                android:textColor="#FF898989"
                                android:text="n" /> <!-- 알림 시간-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="13sp"
                                android:textColor="#FF898989"
                                android:text="분 전" /> <!-- 분 전-->
                        </LinearLayout> <!-- 유저, 시간 정보 -->
                        <TextView
                            android:id="@+id/chatlist_text_content"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:textSize="18sp"
                            android:textColor="#808080"
                            android:text="안녕하세요" /> <!-- 채팅 내용-->

                    </LinearLayout> <!-- 채팅 -->

                </LinearLayout> <!-- 채팅 테이블 -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E1E1E1" /> <!-- 구분선 -->

            </LinearLayout><!-- 채팅목록 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/img_photo"
                        android:background="@drawable/shape_profilebtn_circle"/> <!-- 유저 프로필 사진 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:text="유저 이름" /> <!-- 유저 이름-->

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="13sp"
                                android:textColor="#FF898989"
                                android:text="n" /> <!-- 알림 시간-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="13sp"
                                android:textColor="#FF898989"
                                android:text="분 전" /> <!-- 분 전-->
                        </LinearLayout> <!-- 유저, 시간 정보 -->
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:textSize="18sp"
                            android:textColor="#808080"
                            android:text="안녕하세요" /> <!-- 채팅 내용-->

                    </LinearLayout> <!-- 채팅 -->

                </LinearLayout> <!-- 채팅 테이블 -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E1E1E1" /> <!-- 구분선 -->

            </LinearLayout><!-- 채팅목록 예시 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/img_photo"
                        android:background="@drawable/shape_profilebtn_circle"/> <!-- 유저 프로필 사진 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:text="유저 이름" /> <!-- 유저 이름-->

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="13sp"
                                android:textColor="#FF898989"
                                android:text="n" /> <!-- 알림 시간-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00ffffff"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textSize="13sp"
                                android:textColor="#FF898989"
                                android:text="분 전" /> <!-- 분 전-->
                        </LinearLayout> <!-- 유저, 시간 정보 -->
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:textSize="18sp"
                            android:textColor="#808080"
                            android:text="안녕하세요" /> <!-- 채팅 내용-->

                    </LinearLayout> <!-- 채팅 -->

                </LinearLayout> <!-- 채팅 테이블 -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E1E1E1" /> <!-- 구분선 -->

            </LinearLayout><!-- 채팅목록 예시 -->

        </LinearLayout>


    </ScrollView> <!--채팅 목록 표시 -->
</LinearLayout>